<div id="home">
  <div class="container jumbotron">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Welcome To Beer Me!</h2>

      </div>
    </div>
  </div>
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-6">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">What's Your Name?</label>
            <input type="text" id="name-text" class="form-control" aria-describedby="name-text" placeholder="Enter Name">
            <label for="age-text">How Old Are You?</label>
            <input type="text" id="age-text" class="form-control" aria-describedby="age-text" placeholder="Enter Age">
            <label for="example-text">What's Your Email?</label>
            <input type="email" id="email-text" class="form-control" aria-describedby="email-text" placeholder="Enter Email">
            <label for="exampleFormControlSelect1">Example select</label>
              <select class="form-control" id="beer-select">
                <option>Beer 1</option>
                <option>Beer 2</option>
                <option>Beer 3</option>
                <option>Beer 4</option>
                <option>Beer 5</option>
              </select>
            <button id="submit" class="btn btn-primary float-right">Submit</button>
          </div>
          </div>
          <div class="col-md-6">
        </form>
        <h3>People Here:</h3>
        <ul id="name-list" class="list-group">
          {{#each Users}}
          <li data-id="{{this.id}}" class="list-group-item">
            {{name}} is drinking {{beer}}
            {{!--<button class="btn btn-danger float-right delete">ï½˜</button> --}}
          </li>
          {{/each}}
        </ul>
        </div>

      </div>
    </div>
  </div>

