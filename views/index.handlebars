{{!-- nav bar --}}
<nav class="level is-mobile is-light" id="navbar">
  <div class="level-item has-text-centered">
    <div>
      <a href="/">
        <p class="heading" id="appName"><i class="fas fa-beer"></i>
          &nbsp Beer Me!</p></a>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">
        <a href="/top"><i class="fas fa-list-ol"></i> &nbsp Leaderboard</p>
      </a>
    </div>
  </div>
</nav>

<div class="container" id="box">
  <div class="card">
    <div class="card-header card-header-title" id="title">Tap & Bottle</div>
    <div id="leaderboard">
      <form id="myForm">
        <label for="example-text">Username:</label>
        <input class="input is-warning" required id="name-text" type="text" placeholder="Enter your username. If you don't have one then make one." aria-describedby="name-text">
        <br> {{!--
        <label for="age-text">How Old Are You?</label>
        <input type="text" id="age-text" class="form-control" aria-describedby="age-text" placeholder="Enter Age"> --}}

        <label for="example-text">Email:</label>
        <input type="email" required id="email-text" class="input is-warning" aria-describedby="email-text" placeholder="Enter the email associated with username">
        <div class="control has-icons-left">
          <label>Your beer:</label>
          <div class="select is-warning has-icons-left">
            <select id="beer-select">
              {{#each Beer}}
              <option value="{{id}}">{{beerName}}</option>
              {{/each}}
            </select>
            <span class="icon is-left">
              <i class="fas fa-beer"></i>
            </span>
          </div>
          <br>
          <label>Rate it:</label>
          <div class="select is-warning">
            <select id="beer-rating">
              <option value="1">Eh</option>
              <option value="2">Alright</option>
              <option value="3">Good</option>
              <option value="4">Damn Good</option>
              <option value="5">I Have Found God's Nectar</option>
            </select>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <textarea id="beer-comment" rows="4" class="textarea is-warning" type="text" placeholder="Let us know what you liked about the beer."></textarea>

            <button type='submit' id="myForm" class="button is-fullwidth is-info" data-toggle="modal">Submit</button>
          </div>
        </div>
      </form>
      <h3 id="people-here">People Here:</h3>

      <table class="table is-narrow comments-table" style="width:100%">
        <thead class="comments-table">

          {{!--
          <ul id="name-list" class="list-group">
            {{#each Rating}}
            <li value="{{id}}" class="list-group-item">
              {{UsersId}} is drinking {{BeerId}} and said
            </li>
            {{/each}}
          </ul> --}}
          <tr id="tableHead">
            <th>Guest</th>
            <th>Beer</th>
            <th>Comment</th>
          </tr>
        </thead>
        {{#each Output}}
        <tr id="tableRow">
          <td>{{userName}}</td>
          <td>{{beerName}}</td>
          <td>{{comment}}</td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
</div>
</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
