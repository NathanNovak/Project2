<div class="container" id="box">
  <div class="row">
    <div class="card">
      <div class="card-header card-header-title" id="title">Top beers right now</div>
      <div class="card-body" id="leaderboard">
        <table style="width:100%">
          <tr id="tableHead">
            <th>Beer name</th>
            <th>Brewery</th>
            <th>IBU</th>
            <th>Rating</th>
          </tr>

          {{#each Beer}}
          <tr id="tableRow"></tr>
          <td>
            <a href="localhost:8080/beers/{{id}}">{{ beerName }}</a>
          </td>
          <td>{{ brewer }}</td>
          <td>{{ IBU }}</td>
          <td>{{ rating }}</td>
          </tr>
          {{/each}}

        </table>
        <ul>
          {{!-- {{#each beer}} {{/each}} --}}
        </ul>
      </div>
    </div>
  </div>
